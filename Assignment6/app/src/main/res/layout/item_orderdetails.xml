<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background"
    android:elevation="2dp">

    <TextView
        android:id="@+id/txtProductId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_product_id"
        android:textSize="16sp"
        android:textColor="#212121"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_quantity"
        android:textSize="16sp"
        android:textColor="#212121"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/txtProductId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_price"
        android:textSize="16sp"
        android:textColor="#212121"
        android:gravity="end"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/txtQuantity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_discount"
        android:textSize="16sp"
        android:textColor="#212121"
        android:gravity="end"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintStart_toEndOf="@id/txtPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVAT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_vat"
        android:textSize="16sp"
        android:textColor="#212121"
        android:gravity="end"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintStart_toEndOf="@id/txtDiscount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTotalValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_total_value"
        android:textSize="16sp"
        android:textColor="#212121"
        android:gravity="end"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@id/txtVAT"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>