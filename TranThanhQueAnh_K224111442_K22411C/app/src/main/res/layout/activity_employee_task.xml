<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peppa_light_gray"
    tools:context=".activities.EmployeeTaskActivity">

    <TextView
        android:id="@+id/txtEmployeeDashboardTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
    android:text="@string/employee_tasks_title"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@color/peppa_dark_gray"
    android:padding="16dp"
    android:background="@color/peppa_blue"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCurrentTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/txt_loading_current_task"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/peppa_dark_gray"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmployeeDashboardTitle" />

    <ListView
        android:id="@+id/lvCustomersAssigned"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCurrentTaskTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
