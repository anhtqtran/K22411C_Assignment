<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/sans-serif"
        android:gravity="center"
        android:maxLines="1"
        android:minHeight="48dp"
        android:text="@string/title_app"
        android:textColor="#027367"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_coefficient_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#E91E63"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="@string/title_coefficient_a"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtCoefficientA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:minHeight="48dp"
        android:padding="8dp"
        android:backgroundTint="#005566"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/title_coefficient_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#E91E63"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="@string/title_coefficient_b"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtCoefficientB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:minHeight="48dp"
        android:padding="8dp"
        android:backgroundTint="#005566"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSolution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="do_solution"
            android:text="@string/title_solution"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="do_next"
            android:text="@string/title_next"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="do_exit"
            android:text="@string/title_exit"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_result"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:minHeight="48dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="8dp"
        android:textColor="#005566"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#FFF8B3"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textColor="#005566"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_language"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:minHeight="48dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="8dp"
        android:textColor="#005566"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVietnamese"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_vietnamese"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_english"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSpanish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_spanish"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnFrench"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_french"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:padding="8dp"
            android:backgroundTint="#005566"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>